<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kyonggi.randhand_chat">
    <!-- 인터넷을 사용하기 위하여 추가 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 갤러리 권한 설정하기 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" /> <!-- 갤러리 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:name=".Util.AppUtil"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RandHandChat"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MediaPipe.SendRequestActivity"
            android:theme="@style/MessageTheme"
            android:exported="true" />
        <activity
            android:name=".MediaPipe.MediaPipeActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/MessageTheme" />
        <activity
            android:name=".ProgressActivity"
            android:exported="true"
            android:theme="@style/MessageTheme">
        </activity>
        <activity
            android:name=".Fragments.ChatsActivity.ChatActivity"
            android:exported="true"
            android:theme="@style/MessageTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Fragments.UserActivity.EditProfileActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Fragments.UserActivity.BlockedFriendActivity"
            android:exported="true"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Fragments.UserActivity.ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" /> <!-- Message Activity 등록 -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainTheme" /> <!-- Splash Activity 등록 -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity 등록 -->
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginTheme" />
    </application>

</manifest>