<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16sp">

    <!-- 메세지 보낸 날짜 View -->
    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4sp"
        android:layout_marginTop="8sp"
        android:paddingLeft="8sp"
        android:paddingTop="4sp"
        android:paddingRight="8sp"
        android:paddingBottom="4sp"
        tools:text="June 10"
        android:textColor="@color/applyMes_textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- 내가 보낸 메세지 View -->
    <TextView
        android:id="@+id/myMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/my_message"
        android:elevation="2sp"
        android:maxWidth="250sp"
        android:padding="10sp"
        android:textColor="@color/myMes_textColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDate"
        tools:text="Placeholder Message" />
    <!-- 메세지 보낸 시간 View -->
    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="오전 10:00"
        android:textSize="10sp"
        android:textColor="@color/applyMes_textColor"
        app:layout_constraintBottom_toBottomOf="@+id/myMessageBody"
        app:layout_constraintRight_toLeftOf="@+id/myMessageBody"
        android:layout_marginRight="2sp"
        android:layout_marginEnd="2sp" />

</androidx.constraintlayout.widget.ConstraintLayout>