<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandHandChat" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

        <!-- 스틀래시 스크린 액티비티용 테마 -->
        <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
            <item name="android:windowBackground">@drawable/splash_background</item>
            <item name="android:windowActionBar">false</item>
        </style>

    <!-- 메시지 페이지 스크린 용 테마 -->
    <style name="MessageTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/mes_background</item>
        <item name="android:statusBarColor">@color/mes_background</item>
    </style>

    <!-- 로그인 페이지 스크린 엑티비티용 테마 -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/mes_background</item>
        <item name="colorPrimaryDark">@color/mes_background</item>
        <item name="android:windowBackground">@color/mes_background</item>
    </style>

    <!-- 기본 메인 페이지 스크린 텍티비티용 테마 -->
    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/mes_background</item>
        <item name="colorPrimaryDark">@color/mes_background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:navigationBarColor">@color/mes_background</item>
    </style>

</resources>