<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 로그인 페이지 스크린 엑티비티용 테마 -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- 메시지 페이지 스크린 용 테마 -->
    <style name="MessageTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/mes_background</item>
        <item name="android:statusBarColor">@color/mes_background</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/mes_background</item>
        <item name="colorPrimaryDark">@color/mes_background</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:navigationBarColor">@color/mes_background</item>
    </style>

</resources>